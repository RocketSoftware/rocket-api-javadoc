<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!-- Emulator API Module -->
	<modelVersion>4.0.0</modelVersion>
	<artifactId>EmulatorApi</artifactId>
	<packaging>jar</packaging>

	<parent>
		<relativePath>../../pom.xml</relativePath>
		<groupId>com.rs.seagull.cjl2</groupId>
		<artifactId>cjl2</artifactId>
    	<version>8.11.9</version>
	</parent>

	<scm>
		<developerConnection>${cjl2.scm.root}/Generic/EmulatorApi</developerConnection>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<classpathDependencyExcludes>
						<classpathDependencyExcludes>com.rs.seagull.cjl2:InternalTools</classpathDependencyExcludes>
					</classpathDependencyExcludes>
					<additionalClasspathElements>
						<additionalClasspathElement>${root.dir}/InternalTools/target/test-classes</additionalClasspathElement>
						<additionalClasspathElement>${root.dir}/InternalTools/target/classes</additionalClasspathElement>
					</additionalClasspathElements>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>test-resources</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<archive>
								<manifestEntries>
									<RocketSoftware-Product>Common Java Libraries 2</RocketSoftware-Product>
									<RocketSoftware-Component>Emulator API</RocketSoftware-Component>
									<RocketSoftware-Version>${project.version}</RocketSoftware-Version>
									<RocketSoftware-Revision>${jet.revisionstring}</RocketSoftware-Revision>
									<RocketSoftware-BuildNumber>${jet.buildnumber}</RocketSoftware-BuildNumber>
									<RocketSoftware-Timestamp>${timestamp}</RocketSoftware-Timestamp>
									<Implementation-Version>${project.version}</Implementation-Version>
								</manifestEntries>
							</archive>
							<descriptors>
								<descriptor>test-resources-definition.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<excludePackageNames>com.rs.seagull.emulator.api.ident:com.rs.seagull.emulator.api.impl</excludePackageNames>
					<archive>
						<manifestEntries>
							<RocketSoftware-Product>Common Java Libraries 2</RocketSoftware-Product>
							<RocketSoftware-Component>JavaDoc</RocketSoftware-Component>
							<RocketSoftware-Version>${project.version}</RocketSoftware-Version>
							<RocketSoftware-Revision>${jet.revisionstring}</RocketSoftware-Revision>
							<RocketSoftware-BuildNumber>${jet.buildnumber}</RocketSoftware-BuildNumber>
							<RocketSoftware-Timestamp>${timestamp}</RocketSoftware-Timestamp>
							<Implementation-Version>${project.version}</Implementation-Version>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>bamboobuild</id>
			<activation>
				<property>
					<name>bamboobuild</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target description="Copy API JavaDoc to a network location">
										<property name="javadoc.target.folder" value="${updatesite.snapshot.path.dordrecht}${project.version}\api\docs" />
										<echo>Property 'javadoc.target.folder' = ${javadoc.target.folder}</echo>
										<delete verbose="true" dir="${javadoc.target.folder}"/>
										<copy verbose="true" todir="${javadoc.target.folder}">
											<fileset dir="${project.build.directory}/apidocs"/>
										</copy>
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>PhysicalEmulatorXml</artifactId>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>PhysicalEmulatorAnsiPlus</artifactId>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>PhysicalEmulator5250</artifactId>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>PhysicalEmulator3270</artifactId>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>IdentificationModel</artifactId>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>EmulatorViewerSwt</artifactId>
		</dependency>
        <dependency>
            <version>${project.version}</version>
            <groupId>com.rs.seagull.cjl2</groupId>
            <artifactId>Security</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <version>${project.version}</version>
            <groupId>com.rs.seagull.cjl2</groupId>
            <artifactId>Security</artifactId>
            <scope>test</scope>
            <type>test-jar</type>
        </dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>PhysicalEmulatorBase</artifactId>
			<scope>test</scope>
			<type>test-jar</type>
		</dependency>
		<dependency>
			<version>${project.version}</version>
			<groupId>com.rs.seagull.cjl2</groupId>
			<artifactId>InternalTools</artifactId>
			<scope>test</scope>
		</dependency>
        <dependency>
            <version>${project.version}</version>
            <groupId>com.rs.seagull.cjl2</groupId>
            <artifactId>Crypto</artifactId>
            <scope>test</scope>
            <type>test-jar</type>
        </dependency>
	</dependencies>
</project>
